<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">

<navigation-rule>
	<from-view-id>employee.xhtml</from-view-id>
	<navigation-case>
		<from-outcome>addEmployee</from-outcome>
		<to-view-id>addEmployee.xhtml</to-view-id> 
	</navigation-case>
	
	<navigation-case>
		<from-outcome>noResult</from-outcome>
		<to-view-id>noResult.xhtml</to-view-id>
	</navigation-case>
	
	<navigation-case>
		<from-action>#{empController.listEmployee}</from-action>
		<to-view-id>employee.xhtml</to-view-id> 
	</navigation-case>
	<navigation-case>
		<from-action>#{empController.addEmployee}</from-action>
		<to-view-id>employee.xhtml</to-view-id> 
	</navigation-case>
	<navigation-case>
		<from-action>#{empController.editEmployee}</from-action>
		<to-view-id>editEmployee.xhtml</to-view-id> 
	</navigation-case>
	<navigation-case>
		<from-action>#{empController.deleteEmployee}</from-action>
		<to-view-id>employee.xhtml</to-view-id> 
	</navigation-case>
	


</navigation-rule>

</faces-config>
